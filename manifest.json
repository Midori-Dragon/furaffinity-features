{
    "manifest_version": 3,
    "name": "FurAffinity Features",
    "version": "1.2.4",
    "description": "A collection of features and enhancements for Fur Affinity",
    "author": "Midori Dragon",
    "permissions": [ "storage" ],
    "host_permissions": [ "*://*.furaffinity.net/*" ],
    "content_scripts": [
        {
            "matches": [ "*://*.furaffinity.net/*" ],
            "js": [ "bundle.user.js" ],
            "run_at": "document_idle",
            "all_frames": true
        }
    ],
    "icons": {
        "128": "icons/logo-x128.png"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "furaffinity-features@midori-dragon"
        }
    }
}